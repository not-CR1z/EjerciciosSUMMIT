<Window x:Class="EjemploDataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploDataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Width="100" Name="MiCuadro" Margin="160" Text="{Binding ElementName=MiSlider,Path=Value,Mode=OneTime}"></TextBox>
        <Slider Width="350" Name="MiSlider" Minimum="0" Maximum="100" Value="75"></Slider>
    </StackPanel>
</Window>
